def my_function():
    print("Hello world")
    print("Bye")

my_function()

def turn_around():
    turn_left()
    turn_left()
def turn_right():
    turn_around()
    turn_left()

turn_left()
move()
turn_right()
move()
turn_right()
move()
turn_right()
move()


